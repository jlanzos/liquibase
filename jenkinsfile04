pipeline {
    agent any
    stages {
        stage('Info') {
            steps {
                echo "Working with DDBB: $params.DDBB"
                
               }
        }
	  
	
        stage('Version') {
            steps {
                script {
                         bat "docker run --rm   liquibase/liquibase --show-banner=False --version"
                       }
                 }
           }
       
        stage('Status') {
            steps {
                script {
				        if (params.DDBB == 'sqlite002') {
                           bat 'docker run --rm  -v c:"\\Varios\\Vueling\\liquibase\\${params.DDBB}":/liquibase/changelog liquibase/liquibase --show-banner=False  --url="jdbc:sqlserver://192.168.1.139:1433;databaseName=Vueling_SAP;queryTimeout=5;trustServerCertificate=true;integratedsecurity=False;defaultSchemaName=dbo" --driver=com.microsoft.sqlserver.jdbc.SQLServerDriver --classpath=internal/lib/mssql-jdbc.jar --username=sa --password=lan000 --changelog-file=mychangelog.sql --search-path=changelog status --verbose'						 
                           }
                        else {
                          bat "echo 'Hello from ${params.DDBB} branch!'"
                        }						   
                       }
                 }
           }
         }		 
   	
}	
 