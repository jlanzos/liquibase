pipeline {
    agent any
    stages {
	    stage('Pull Remote Repo') {
            steps {
               bat("copy c:\\Varios\\Vueling\\liquibase\\sqlite001\\mychangelog.sql c:\\Varios\\Vueling\\liquibase\\sqlite002\\mychangelog005.sql ")
               dir('c:\\Varios\\Vueling\\liquibase\\sqlite002'){
                   bat "git add *.sql"
                   bat "git add jenkinsfile*"
                   bat "git add -u"
                   bat "git stash save"
                   bat "git pull"
                   bat "git stash pop"
               }
            }
        }
        stage('Commit local repo') {
            steps {
               dir('c:\\Varios\\Vueling\\liquibase\\sqlite002'){
                    bat 'git commit -am "Add Changes" '
               }
            }
        }
        
        stage('Push to Remote Repo') {
            steps {
               //bat "git branch -a "
               dir('c:\\Varios\\Vueling\\liquibase\\sqlite002'){
                   bat 'git remote set-url origin "https://github.com/jlanzos/liquibase.git"  '
                   withCredentials([gitUsernamePassword(credentialsId: 'jlg-id', gitToolName: 'Default')]) {
                    bat "git push -u origin main"
                  }
                   
               }
            }
        }
	
	
        stage('Version') {
            steps {
                script {
                         bat "docker run --rm   liquibase/liquibase --show-banner=False --version"
                       }
                 }
           }
       
        stage('Status') {
            steps {
                script {
                         bat 'docker run --rm  -v c:\\Varios\\Vueling\\liquibase\\sqlite002:/liquibase/changelog liquibase/liquibase --show-banner=False  --url="jdbc:sqlserver://192.168.1.139:1433;databaseName=Vueling_SAP;queryTimeout=5;trustServerCertificate=true;integratedsecurity=False;defaultSchemaName=dbo" --driver=com.microsoft.sqlserver.jdbc.SQLServerDriver --classpath=internal/lib/mssql-jdbc.jar --username=sa --password=lan000 --changelog-file=mychangelog002.sql --search-path=changelog status --verbose'
                                                			 

                       }
                 }
           }
         }		 
   	
}	

 